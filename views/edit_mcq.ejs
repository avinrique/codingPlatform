<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit MCQ Question</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .container {
            margin-top: 30px;
        }
        h1 {
            font-size: 2rem;
            margin-bottom: 20px;
        }
        .form-label {
            font-weight: bold;
        }
        .form-control {
            margin-bottom: 15px;
        }
        .btn {
            padding: 10px 20px;
        }
        .btn-danger {
            margin-top: 10px;
        }
        .back-link {
            display: block;
            margin-top: 20px;
            text-align: center;
        }
    </style>
</head>
<body>

    <div class="container">
        <h1>Edit MCQ Question</h1>

        <!-- Edit MCQ Form -->
        <div class="card p-4 mb-3">
            <form action="/admin/exam/<%= examId %>/edit/mcq/<%= mcq._id %>" method="POST">
                <div class="mb-3">
                    <label for="question" class="form-label">Question:</label>
                    <input type="text" id="question" name="question" class="form-control" value="<%= mcq.question %>" required>
                </div>

                <div class="mb-3">
                    <label class="form-label">Options:</label>
                    <input type="text" name="options[0]" class="form-control mb-2" value="<%= mcq.options[0] %>" required>
                    <input type="text" name="options[1]" class="form-control mb-2" value="<%= mcq.options[1] %>" required>
                    <input type="text" name="options[2]" class="form-control mb-2" value="<%= mcq.options[2] %>" required>
                    <input type="text" name="options[3]" class="form-control mb-2" value="<%= mcq.options[3] %>" required>
                </div>

                <div class="mb-3">
                    <label for="correctAnswer" class="form-label">Correct Answer:</label>
                    <input type="text" id="correctAnswer" name="correctAnswer" class="form-control" value="<%= mcq.correctAnswer %>" required>
                </div>

                <div class="mb-3">
                    <label for="marks" class="form-label">Marks:</label>
                    <input type="number" id="marks" name="marks" class="form-control" value="<%= mcq.marks %>" required>
                </div>

                <button type="submit" class="btn btn-primary">Update MCQ</button>
            </form>
        </div>

        <!-- Delete Form -->
        <div class="text-center">
            <form action="/admin/exam/<%= examId %>/delete/mcq/<%= mcq._id %>" method="POST">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete Question</button>
            </form>
        </div>

        <!-- Back Link -->
        <div class="back-link">
            <a href="/admin/exam/questions/<%= examId %>" class="btn btn-link">Back to Questions</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
