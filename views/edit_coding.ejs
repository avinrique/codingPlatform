<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Coding Question</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .container {
            margin-top: 30px;
        }
        h1 {
            font-size: 2rem;
            margin-bottom: 20px;
        }
        .form-label {
            font-weight: bold;
        }
        .form-control {
            margin-bottom: 15px;
        }
        .btn {
            padding: 10px 20px;
        }
        .btn-danger {
            margin-top: 10px;
        }
        .back-link {
            display: block;
            margin-top: 20px;
            text-align: center;
        }
        textarea {
            resize: vertical;
        }
    </style>
</head>
<body>

    <div class="container">
        <h1>Edit Coding Question</h1>

        <!-- Edit Coding Question Form -->
        <div class="card p-4 mb-3">
            <form action="/admin/exam/<%= examId %>/edit/coding/<%= codingQuestion._id %>" method="POST">
                
                <div class="mb-3">
                    <label for="questionTile" class="form-label">Title:</label>
                    <input type="text" id="questionTile" name="questionTile" class="form-control" value="<%= codingQuestion.questionTile %>" required>
                </div>

                <div class="mb-3">
                    <label for="questiontext" class="form-label">Question:</label>
                    <textarea id="questiontext" name="questiontext" class="form-control" required><%= codingQuestion.questiontext %></textarea>
                </div>

                <div class="mb-3">
                    <label for="constraints" class="form-label">Constraints:</label>
                    <input type="text" id="constraints" name="constraits" class="form-control" value="<%= codingQuestion.constraits %>" required>
                </div>

                <div class="mb-3">
                    <label for="inputFormat" class="form-label">Input Format:</label>
                    <input type="text" id="inputFormat" name="inputFormat" class="form-control" value="<%= codingQuestion.inputFormat %>" required>
                </div>

                <div class="mb-3">
                    <label for="outputFormat" class="form-label">Output Format:</label>
                    <input type="text" id="outputFormat" name="outputFormat" class="form-control" value="<%= codingQuestion.outputFormat %>" required>
                </div>

                <div class="mb-3">
                    <label for="sampleInput" class="form-label">Sample Input:</label>
                    <input type="text" id="sampleInput" name="sampleInput" class="form-control" value="<%= codingQuestion.sampleInput %>" required>
                </div>

                <div class="mb-3">
                    <label for="sampleOutput" class="form-label">Sample Output:</label>
                    <input type="text" id="sampleOutput" name="sampleOutput" class="form-control" value="<%= codingQuestion.sampleOutput %>" required>
                </div>

                <div class="mb-3">
                    <label for="solutionTemplate" class="form-label">Solution Template:</label>
                    <textarea id="solutionTemplate" name="solutionTemplate" class="form-control" required><%= codingQuestion.solutionTemplate %></textarea>
                </div>

                <button type="submit" class="btn btn-primary">Update Coding Question</button>
            </form>
        </div>

        <!-- Delete Form -->
        <div class="text-center">
            <form action="/admin/exam/<%= examId %>/delete/coding/<%= codingQuestion._id %>" method="POST">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete Question</button>
            </form>
        </div>

        <!-- Back Link -->
        <div class="back-link">
            <a href="/admin/exam/questions/<%= examId %>" class="btn btn-link">Back to Questions</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
