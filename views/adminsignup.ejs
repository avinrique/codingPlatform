<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Signup</title>
    <script>
        function toggleDepartment() {
            const role = document.getElementById("role").value;
            const departmentDiv = document.getElementById("departmentDiv");
            
            if (role === "teacher") {
                departmentDiv.style.display = "block";
            } else {
                departmentDiv.style.display = "none";
            }
        }
    </script>
</head>
<body>
    <h2>Admin Signup</h2>
    <form action="/admin/signup" method="POST">
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required><br><br>

        <label for="role">Role:</label>
        <select id="role" name="role" required onchange="toggleDepartment()">
            <option value="admin">Admin</option>
            <option value="teacher">Teacher</option>
        </select><br><br>

        <div id="departmentDiv" style="display: none;">
            <label for="department">Department:</label>
            <select id="department" name="department">
                <option value="mc">MC</option>
                <option value="is">IS</option>
                <option value="cs">CS</option>
                <option value="et">ET</option>
                <option value="ec">EC</option>
                <option value="ai">AI</option>
                <option value="cv">CV</option>
            </select><br><br>
        </div>

        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required><br><br>

        <label for="confirm_password">Confirm Password:</label>
        <input type="password" id="confirm_password" name="passcode" required><br><br>

        <button type="submit">Signup</button>
    </form>
</body>
</html>
